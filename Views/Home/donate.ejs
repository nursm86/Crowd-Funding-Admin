<%- include('../partials/home_navbar.ejs')%>

<div class="patientprofile">
    <div class="row">
        <div class="col-md-4 box">
            <div class="well">
                <img src="<%=campaign.image %> " class="doc-img" width="300" height="300">
                <p></p>
            </div>
        </div>

        <div class="col-md-8 box">
            <h1 class="text-white bg-dark text-center">
                <%=campaign.title %>
            </h1>
            <table class="table">

                <tbody>
                    <tr>
                        <td class="tdattribute">User Name</td>
                        <td>:</td>
                        <td><%=campaign.username%></td>
                    </tr>

                    <tr>
                        <td class="tdattribute">Email</td>
                        <td>:</td>
                        <td><%=campaign.email %> </td>
                    </tr>

                    <tr>

                        <td class="tdattribute">Requested Fund</td>
                        <td>:</td>
                        <td><%=campaign.tf %> </td>

                    </tr>
                    <tr>
                        <td class="tdattribute">Raised Fund</td>
                        <td>:</td>
                        <td name = "rf"><%=campaign.rf %> </td>

                    </tr>
                    <tr>
                        <td class="tdattribute">Publised Date</td>
                        <td>:</td>
                        <td><%=campaign.pd %> </td>

                    </tr>
                    <tr>
                        <td class="tdattribute">End Date</td>
                        <td>:</td>
                        <td><%=campaign.ed %> </td>

                    </tr>
                    <tr>
                        <td class="tdattribute">Description</td>
                        <td>:</td>
                        <td><%=campaign.description %> </td>
                    </tr>
                    <tr>
                        <td class="tdattribute">Status</td>
                        <td>:</td>
                        <td>
                            
                            <% if(campaign.status == 1){%>
                                valid
                            <%} else if(campaign.status == 0){%>
                                InValid
                            <%} else if(campaign.status == 3){%>
                                Complete
                            <%} else{%>
                                Blocked
                            <%}%>
                            
                        </td>

                    </tr>
                </tbody>
            </table>
            <div class="form-group">
                <a href="/home" class="btn btn-warning">Back</a>
            </div>
            <div class="form-group">
                <form method="post">
                    <input type="number" name="donate" placeholder="Donation amount" min="1" required>
                    <input type="submit" name="submit" value="Donate" class="btn btn-success">
                </form>
            </div>
        </div>
    </div>
</div>

</div>
</div>
<script type="text/javascript">
    $('.clockpicker').clockpicker({
        placement: 'top',
        align: 'left',
        donetext: 'Done'
    });
</script>